{
  "compilerOptions": {
    "target": "es2023",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "allowJs": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@weblens/*": [
        "./*"
      ],
    }
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "src"
  ]
}